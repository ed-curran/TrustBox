{
  "$id": "pdtfCredentials",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Credentials of the PDTF",
  "type": "object",
  "properties": {
    "credentials": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "schema": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "required": ["schema", "type"],
        "additionalProperties": false
      }
    }
  },
  "required": ["credentials"],
  "additionalProperties": false
}
